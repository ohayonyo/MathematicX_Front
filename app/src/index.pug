- let cols = [
-   '#26e0ec, #bf4fd9', 
-   '#ffda5f, #f9376b', 
-   '#feb6b7, #6148c0', 
-   '#00ecac, #3b5fe9', 
-   '#fe3ea3, #6c41ac'
- ];
- let btns = {
-   'comments': '🗨️', 
-   'settings': '⚙️', 
-   'profile': '👱', 
-   'search': '🔍', 
-   'like': '🖤', 
-   'delete': '🗑️', 
-   'purchase': '🛒', 
-   'ok': '✔️', 
-   'cancel': '❌', 
