- let opts = [
-   'Simple Chrome-only (non-standard) solution', 
-   'Extra pseudo cross-browser solution', 
-   'No pill rounding solution'
- ];
- let n = opts.length;

- for(let i = 0; i < n; i++)
  section
    h3 #{opts[i]}
